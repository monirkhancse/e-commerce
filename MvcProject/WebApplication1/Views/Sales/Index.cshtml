@model IEnumerable<WebApplication1.Models.Sale>

@{
    ViewBag.Title = "Index";
}

<div class="col-sm-12">
    @Html.ActionLink(" New Sale", "Create", "Sales", new { }, new { @class = "btn btn-primary  fa fa-plus" })
</div>
<hr />
<br />
<div>
    @ViewBag.message
</div>
<div class="table-responsive dataTables_scroll">
    <div class="box box-primary">
        <div class="box-body">
            <table border="1" class="table table-bordered table-hover table-striped table-condensed">
                <tr style="font-size:14px">
                    <th>
                        @Html.DisplayNameFor(model => model.sale_date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.rate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.total_price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.vat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.net_total_price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.stock_status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.memo_no)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.comments)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customer.CustomerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Store.store_name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.sale_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.rate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.total_price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.vat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.discount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.net_total_price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.stock_status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.memo_no)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.comments)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Store.store_name)
                        </td>
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id=item.SaleId }) |*@
                            @*@Html.ActionLink(" Edit", "Edit", new { id = item.SaleId }, new { @class = "btn btn-primary fa fa-pencil" }) |*@
                            @Html.ActionLink(" Details", "Details", new { id = item.SaleId }, new { @class = "btn btn-success fa fa-info" }) |
                            @Html.ActionLink(" Delete", "Delete", new { id = item.SaleId }, new { @class = "btn btn-danger fa fa-trash-o" }) |
                        </td>
                    </tr>
                }


            </table>
        </div>
    </div>
</div>