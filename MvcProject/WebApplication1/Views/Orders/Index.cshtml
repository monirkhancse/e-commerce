@model IEnumerable<WebApplication1.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderName)
        </td>
        <td>
            @Html.ActionLink(" Edit", "Edit", new { id = item.OrderId }, new { @class = "btn btn-primary fa fa-pencil" }) |
            @Html.ActionLink(" Details", "Details", new { id = item.OrderId }, new { @class = "btn btn-success fa fa-info" }) |
            @Html.ActionLink(" Delete", "Delete", new { id = item.OrderId }, new { @class = "btn btn-danger fa fa-trash-o" }) |
        </td>
    </tr>
}

</table>
